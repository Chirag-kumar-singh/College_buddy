<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/recCard"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="5.5"
            android:background="@drawable/activity_exam_paper_border">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:weightSum="3">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recImage"
                    android:src="@drawable/upload"
                    app:tint="@color/white"
                    android:layout_weight="2"
                    android:background="@color/primarycolor"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="3"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textViewSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textColor="@color/primarycolor"
                        android:background="@drawable/exam_paper_element_border"/>

                    <TextView
                        android:id="@+id/textViewbranch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="TextView"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:background="@drawable/exam_paper_element_border"
                        android:textColor="@color/primarycolor"/>

                    <!-- New LinearLayout for textView7 and textView8 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/textViewType"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/primarycolor"
                            android:background="@drawable/exam_paper_element_border"/>

                        <TextView
                            android:id="@+id/textViewYear"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:textColor="@color/primarycolor"
                            android:background="@drawable/exam_paper_element_border"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="3"
                android:layout_weight="1.5"
                android:background="@drawable/recycler_item_border">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Title"
                        android:textSize="20sp"
                        android:maxLines="1"
                        android:textColor="@color/primarycolor"
                        android:id="@+id/recName"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@color/primarycolor">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Report"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:id="@+id/recLang"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
